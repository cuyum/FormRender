<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario 4.1.2-A Indicador de reiteración de reclamos - Cuadro A</h:title>
    <model>
      <submission action="/api/deposition/draft" method="form-data-post"/>
      <instance>
        <ict4.1.2.a id="ICT4.1.2.A">
          <meses jr:template="">
            <mes>
              <periodo_considerado/>
              <cant_usuario/>
              <cant_usuario_reclamo/>
              <porcentaje/>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </ict4.1.2.a>
      </instance>
      <bind nodeset="/ict4.1.2.a/meses/mes/periodo_considerado" required="true()" type="select1"/>
      <bind constraint=".&gt;=0" nodeset="/ict4.1.2.a/meses/mes/cant_usuario" required="true()" type="int"/>
      <bind constraint=".&gt;=0" nodeset="/ict4.1.2.a/meses/mes/cant_usuario_reclamo" required="true()" type="int"/>
      <bind constraint="porcentual= /ict4.1.2.a/meses/mes/cant_usuario , /ict4.1.2.a/meses/mes/cant_usuario_reclamo ,1000" nodeset="/ict4.1.2.a/meses/mes/porcentaje" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/ict4.1.2.a/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/ict4.1.2.a/meses">
      <label></label>
      <repeat appearance="grilla" nodeset="/ict4.1.2.a/meses">
        <group appearance="col3 well-white" ref="/ict4.1.2.a/meses/mes">
          <label>Usuarios que han realizado reclamos ante el Prestador</label>
          <select1 appearance="minimal" ref="/ict4.1.2.a/meses/mes/periodo_considerado">
            <label>Período Considerado</label>
            <hint>Período Considerado</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
            <item>
              <label>Enero</label>
              <value>Enero</value>
            </item>
            <item>
              <label>Febrero</label>
              <value>Febrero</value>
            </item>
            <item>
              <label>Marzo</label>
              <value>Marzo</value>
            </item>
            <item>
              <label>Abril</label>
              <value>Abril</value>
            </item>
            <item>
              <label>Mayo</label>
              <value>Mayo</value>
            </item>
            <item>
              <label>Junio</label>
              <value>Junio</value>
            </item>
            <item>
              <label>Julio</label>
              <value>Julio</value>
            </item>
            <item>
              <label>Agosto</label>
              <value>Agosto</value>
            </item>
            <item>
              <label>Septiembre</label>
              <value>Septiembre</value>
            </item>
            <item>
              <label>Octubre</label>
              <value>Octubre</value>
            </item>
            <item>
              <label>Noviembre</label>
              <value>Noviembre</value>
            </item>
            <item>
              <label>Diciembre</label>
              <value>Diciembre</value>
            </item>
            <item>
              <label>1º Trimestre</label>
              <value>1º Trimestre</value>
            </item>
            <item>
              <label>2º Trimestre</label>
              <value>2º Trimestre</value>
            </item>
            <item>
              <label>3º trimestre</label>
              <value>3º trimestre</value>
            </item>
            <item>
              <label>4º trimestre</label>
              <value>4º trimestre</value>
            </item>
            <item>
              <label>Anual</label>
              <value>Anual</value>
            </item>
          </select1>
          <input ref="/ict4.1.2.a/meses/mes/cant_usuario">
            <label>Cant. usuarios con reiteración de un reclamo</label>
            <hint>Cant. de usuarios que han reiterado un reclamo ante el Prestador en un mismo período</hint>
          </input>
          <input ref="/ict4.1.2.a/meses/mes/cant_usuario_reclamo">
            <label>Cant. usuarios con reclamos</label>
            <hint>Cantidad de usuarios que han realizado reclamos ante el Prestador</hint>
          </input>
          <input ref="/ict4.1.2.a/meses/mes/porcentaje">
            <label>Resultado (%)</label>
            <hint>Resultado del Indicador</hint>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
