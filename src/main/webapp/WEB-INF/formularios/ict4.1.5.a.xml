<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario 4.1.5 Cuadro A - IRSCP</h:title>
    <model>
      <submission action="/api/deposition/draft" method="form-data-post"/>
      <instance>
        <ict4.1.5.a id="ICT4.1.5.A">
          <meses jr:template="">
            <mes>
              <cant_reclamo_prepaga/>
              <total_accesos/>
              <porcentaje/>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </ict4.1.5.a>
      </instance>
      <bind constraint=".&gt;=0" nodeset="/ict4.1.5.a/meses/mes/cant_reclamo_prepaga" required="true()" type="int"/>
      <bind constraint=".&gt;=0" nodeset="/ict4.1.5.a/meses/mes/total_accesos" required="true()" type="int"/>
      <bind nodeset="/ict4.1.5.a/meses/mes/porcentaje" required="true()" type="decimal"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/ict4.1.5.a/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/ict4.1.5.a/meses">
      <label></label>
      <repeat appearance="grilla" nodeset="/ict4.1.5.a/meses">
        <group appearance="col3 well-white variable" ref="/ict4.1.5.a/meses/mes">
          <label>{title}</label>
          <input appearance="numerador" ref="/ict4.1.5.a/meses/mes/cant_reclamo_prepaga">
            <label>Cant. de reclamos sobre Saldo de Ctas. Prepagas</label>
            <hint>Cantidad de reclamos sobre el Saldo de Cuentas Prepagas</hint>
          </input>
          <input appearance="denominador" ref="/ict4.1.5.a/meses/mes/total_accesos">
            <label>Total de accesos en modalidad prepaga</label>
            <hint>NÃºmero total de accesos que operen en la modalidad prepaga</hint>
          </input>
          <input appearance="porcentaje" ref="/ict4.1.5.a/meses/mes/porcentaje">
            <label>Resultado (%)</label>
            <hint>Resultado del Indicador</hint>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
