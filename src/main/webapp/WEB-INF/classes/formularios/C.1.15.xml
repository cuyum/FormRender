<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>C.1.15 - Planes</h:title>
    <model>
      <instance>
        <C.1.15 id="C_1_15">
          <my_string/>
          <periodo>1</periodo>
          <segmento_mercado>1</segmento_mercado>
          <abono_mensual/>
          <selec_opcion/>
          <limitado_cant/>
          <precio/>
          <observacion/>
          <meta>
            <instanceID/>
          </meta>
        </C.1.15>
      </instance>
      <bind nodeset="/C.1.15/my_string" required="true()" type="string"/>
      <bind nodeset="/C.1.15/periodo" required="true()" type="select1"/>
      <bind nodeset="/C.1.15/segmento_mercado" required="true()" type="select1"/>
      <bind constraint="regex(., '^(\d{1}\.)?(\d+\.?)+(,\d{2})') and .&lt;1000.00 and .&gt;0.00" jr:constraintMsg="Debe ingresar número de 3 dígitos y 2 decimales." nodeset="/C.1.15/abono_mensual" required="true()" type="decimal"/>
      <bind nodeset="/C.1.15/selec_opcion" required="true()" type="select1"/>
      <bind constraint="regex(., '[0-9]*') and .&lt;1000 and .&gt;0" jr:constraintMsg="Debe ingresar número entero de hasta 3 dígitos" nodeset="/C.1.15/limitado_cant" relevant=" /C.1.15/selec_opcion ='otra'" type="string"/>
      <bind constraint="regex(., '^(\d{1}\.)?(\d+\.?)+(,\d{2})') and .&lt;1000.00 and .&gt;0.00" jr:constraintMsg="Debe ingresar número de 3 dígitos y 2 decimales." nodeset="/C.1.15/precio" required="true()" type="decimal"/>
      <bind nodeset="/C.1.15/observacion" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C.1.15/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/C.1.15/my_string">
      <label>PLAN</label>
      <hint>Nombre del Plan, Producto o Promoción</hint>
    </input>
    <select1 appearance="minimal" ref="/C.1.15/periodo">
      <label>APLICACIÓN</label>
      <hint>Seleccione Opción</hint>
      <item>
        <label>Masiva</label>
        <value>1</value>
      </item>
      <item>
        <label>Por Adhesión</label>
        <value>2</value>
      </item>
    </select1>
    <select1 appearance="minimal" ref="/C.1.15/segmento_mercado">
      <label>SEGMENTO</label>
      <hint>Segmento de Mercado. Seleccione Opción.</hint>
      <item>
        <label>Segmento 1</label>
        <value>1</value>
      </item>
      <item>
        <label>Segmento 2</label>
        <value>2</value>
      </item>
      <item>
        <label>Segmento 3</label>
        <value>3</value>
      </item>
    </select1>
    <input ref="/C.1.15/abono_mensual">
      <label>ABONO ($)</label>
      <hint>Abono mensual en pesos, 3 dígitos y 2 decimales.</hint>
    </input>
    <select1 ref="/C.1.15/selec_opcion">
      <label>MINUTOS</label>
      <hint>Seleccione Opción</hint>
      <item>
        <label>Ilimitado</label>
        <value>ilimitado</value>
      </item>
      <item>
        <label>Limitado</label>
        <value>otra</value>
      </item>
    </select1>
    <input ref="/C.1.15/limitado_cant">
      <label>Tráfico incluído en Minutos</label>
      <hint>Ingrese número entero de hasta 3 dígitos</hint>
    </input>
    <input ref="/C.1.15/precio">
      <label>PRECIO ($)</label>
      <hint>Precio del minuto en pesos, 3 dígitos y 2 decimales.</hint>
    </input>
    <input appearance="multiline" ref="/C.1.15/observacion">
      <label>OBSERVACIONES</label>
    </input>
  </h:body>
</h:html>
