<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C.1.28 - Ingresos</h:title>
    <model>
      <instance>
        <C1.28 id="C1.28">
          <mes>
            <stl/>
            <ldn/>
            <ldi/>
            <lineas/>
            <otros/>
            <calculate1/>
            <total/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.28>
      </instance>
      <bind constraint="mask=999.999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.28/mes/stl" required="true()" type="int"/>
      <bind constraint="mask=999.999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.28/mes/ldn" required="true()" type="int"/>
      <bind constraint="mask=999.999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.28/mes/ldi" required="true()" type="int"/>
      <bind constraint="mask=999.999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.28/mes/lineas" required="true()" type="int"/>
      <bind constraint="mask=999.999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.28/mes/otros" required="true()" type="int"/>
      <bind calculate=" /C1.28/mes/stl + /C1.28/mes/ldn + /C1.28/mes/ldi + /C1.28/mes/lineas + /C1.28/mes/otros " nodeset="/C1.28/mes/calculate1" type="string"/>
      <bind constraint="mask=999.999.999.999" nodeset="/C1.28/mes/total" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.28/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.28/mes">
      <label>Enero</label>
      <input ref="/C1.28/mes/stl">
        <label>STL</label>
        <hint>STL [en miles de pesos]</hint>
      </input>
      <input ref="/C1.28/mes/ldn">
        <label>LDN</label>
        <hint>LDN [en miles de pesos]</hint>
      </input>
      <input ref="/C1.28/mes/ldi">
        <label>LDI</label>
        <hint>LDI [en miles de pesos]</hint>
      </input>
      <input ref="/C1.28/mes/lineas">
        <label>Líneas Directas</label>
        <hint>Líneas Dierctas [en miles de pesos]</hint>
      </input>
      <input ref="/C1.28/mes/otros">
        <label>Otros</label>
        <hint>Otros [en miles de pesos]</hint>
      </input>
      <input ref="/C1.28/mes/total">
        <label>Total <output value=" /C1.28/mes/calculate1 "/></label><hint>Total [en miles de pesos]</hint>
      </input>
    </group>
  </h:body>
</h:html>
