<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.2 - Interconexión</h:title>
    <model>
      <instance>
        <C1.2 id="C1.2">
          <interconexion>
            <provincia/>
            <partido/>
            <localidad/>
            <areas_local/>
            <cuit_prestador/>
            <cpacidad/>
            <unidad/>
          </interconexion>
          <meta>
            <instanceID/>
          </meta>
        </C1.2>
      </instance>
      <bind constraint="{u'default': u'url=/areas/provincias'}" nodeset="/C1.2/interconexion/provincia" required="true()" type="select1"/>
      <bind constraint="{u'default': u'url=/areas/partidos and depends=/C1.2/interconexion/provincia'}" nodeset="/C1.2/interconexion/partido" required="true()" type="select1"/>
      <bind constraint="{u'default': u'url=/areas/localidades and depends=/C1.2/interconexion/partido'}" nodeset="/C1.2/interconexion/localidad" required="true()" type="select1"/>
      <bind constraint="url=/areas/areas and depends=/C1.2/interconexion/localidad" nodeset="/C1.2/interconexion/areas_local" required="true()" type="select1"/>
      <bind constraint="(., '^[0-9]{2}[0-9]{8}[0-9]$') and type=cuit" jr:constraintMsg="11 dígitos sin guiones ni espacios" nodeset="/C1.2/interconexion/cuit_prestador" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.2/interconexion/cpacidad" required="true()" type="int"/>
      <bind nodeset="/C1.2/interconexion/unidad" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.2/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.2/interconexion">
      <label>Interconexión</label>
      <select1 appearance="minimal" ref="/C1.2/interconexion/provincia">
        <label>Provincia</label>
        <hint>Seleccione Provincia</hint>
        <item>
          <label></label>
          <value>id_provincia</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.2/interconexion/partido">
        <label>Partido / Departamento</label>
        <hint>Seleccione Partido</hint>
        <item>
          <label></label>
          <value>id_dpto_partido</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.2/interconexion/localidad">
        <label>Localidad</label>
        <hint>Seleccione Localidad</hint>
        <item>
          <label></label>
          <value>id_localidad</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.2/interconexion/areas_local">
        <label>Área Local</label>
        <hint>Seleccione Área Local</hint>
        <item>
          <label></label>
          <value>id_area_local</value>
        </item>
      </select1>
      <input ref="/C1.2/interconexion/cuit_prestador">
        <label>Prestador</label>
        <hint>11 dígitos sin guiones ni espacios</hint>
      </input>
      <input ref="/C1.2/interconexion/cpacidad">
        <label>Capacidad</label>
        <hint>Ingrese número entero</hint>
      </input>
      <select1 appearance="minimal" ref="/C1.2/interconexion/unidad">
        <label>Seleccione una opción</label>
        <item>
          <label>Mbps</label>
          <value>mbps</value>
        </item>
        <item>
          <label>n*E1</label>
          <value>xxe1</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
