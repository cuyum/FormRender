<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C.1.18 - Calidad de servicio / reclamos</h:title>
    <model>
      <instance>
        <C1.18 id="C1.18">
          <mes>
            <provincia1/>
            <partido1/>
            <localidad1/>
            <areas_local1/>
            <facturacion1/>
            <averias1/>
            <otros_1/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.18>
      </instance>
      <bind constraint="url=/areas/provincias" nodeset="/C1.18/mes/provincia1" required="true()" type="select1"/>
      <bind constraint="url=/areas/partidos and depends=/C1.18/mes/provincia" nodeset="/C1.18/mes/partido1" required="true()" type="select1"/>
      <bind constraint="url=/areas/localidades and depends=/C1.18/mes/partido" nodeset="/C1.18/mes/localidad1" required="true()" type="select1"/>
      <bind constraint="url=/areas/areas and depends=/C1.18/mes/localidad" nodeset="/C1.18/mes/areas_local1" required="true()" type="select1"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero de hasta 6 dígitos y mayor a 0" nodeset="/C1.18/mes/facturacion1" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero de hasta 6 dígitos y mayor a 0" nodeset="/C1.18/mes/averias1" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero de hasta 6 dígitos y mayor a 0" nodeset="/C1.18/mes/otros_1" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.18/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.18/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.18/mes/provincia1">
        <label>Provincia</label>
        <hint>Seleccione Provincia</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.18/mes/partido1">
        <label>Partido</label>
        <hint>Seleccione Partido</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.18/mes/localidad1">
        <label>Localidad</label>
        <hint>Seleccione Localidad</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.18/mes/areas_local1">
        <label>Área Local</label>
        <hint>Seleccione Área Local</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <input ref="/C1.18/mes/facturacion1">
        <label>Facturación</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.18/mes/averias1">
        <label>Averias</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.18/mes/otros_1">
        <label>Otros</label>
        <hint>Ingrese número entero</hint>
      </input>
    </group>
  </h:body>
</h:html>
