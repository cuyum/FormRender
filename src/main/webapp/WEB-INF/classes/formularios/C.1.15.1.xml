      <bind nodeset="/C.1.15_1/planes/segmento_mercado" required="true()" type="select1"/>
      <bind constraint="regex(., '^(\d{1}\.)?(\d+\.?)+(,\d{2})') and .&lt;1000.00 and .&gt;0.00" jr:constraintMsg="Debe ingresar número de 3 dígitos y 2 decimales." nodeset="/C.1.15_1/planes/abono_mensual" required="true()" type="decimal"/>
