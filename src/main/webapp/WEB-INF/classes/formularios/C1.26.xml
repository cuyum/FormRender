<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.26 - Tarifas / planes</h:title>
    <model>
      <instance>
        <C1.26 id="C1.26">
          <planes>
            <plan/>
            <aplicacion/>
            <segmento/>
            <segmento_otro/>
            <abono/>
            <minutos/>
            <precio/>
            <observaciones/>
          </planes>
          <meta>
            <instanceID/>
          </meta>
        </C1.26>
      </instance>
      <bind nodeset="/C1.26/planes/plan" required="true()" type="string"/>
      <bind nodeset="/C1.26/planes/aplicacion" required="true()" type="select1"/>
      <bind nodeset="/C1.26/planes/segmento" required="true()" type="select1"/>
      <bind nodeset="/C1.26/planes/segmento_otro" relevant=" /C1.26/planes/segmento =OTROS" type="string"/>
      <bind constraint="mask=9.999,99" jr:constraintMsg="Datos no válidos" nodeset="/C1.26/planes/abono" required="true()" type="decimal"/>
      <bind constraint="mask=999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.26/planes/minutos" required="true()" type="int"/>
      <bind constraint="mask=9.999,99" jr:constraintMsg="Datos no válidos" nodeset="/C1.26/planes/precio" required="true()" type="decimal"/>
      <bind nodeset="/C1.26/planes/observaciones" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.26/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.26/planes">
      <label>Planes</label>
      <input ref="/C1.26/planes/plan">
        <label>Plan:</label>
        <hint>Plan</hint>
      </input>
      <select1 appearance="minimal" ref="/C1.26/planes/aplicacion">
        <label>Aplicación:</label>
        <hint>Aplicación</hint>
        <item>
          <label>Seleccione opcion</label>
          <value>0</value>
        </item>
        <item>
          <label>MASIVA</label>
          <value>1</value>
        </item>
        <item>
          <label>POR ADHESION</label>
          <value>2</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.26/planes/segmento">
        <label>Segmento:</label>
        <hint>Segmento</hint>
        <item>
          <label>Seleccione opcion</label>
          <value>0</value>
        </item>
        <item>
          <label>HOGARES</label>
          <value>HOGARES</value>
        </item>
        <item>
          <label>COMERCIAL</label>
          <value>COMERCIAL</value>
        </item>
        <item>
          <label>JUBILADOS</label>
          <value>JUBILADOS</value>
        </item>
        <item>
          <label>GOBIERNO</label>
          <value>GOBIERNO</value>
        </item>
        <item>
          <label>PROFESIONALES</label>
          <value>PROFESIONALES</value>
        </item>
        <item>
          <label>OTROS</label>
          <value>OTROS</value>
        </item>
      </select1>
      <input ref="/C1.26/planes/segmento_otro">
        <label>Especifique:</label>
      </input>
      <input ref="/C1.26/planes/abono">
        <label>Abono:</label>
        <hint>Abono [en pesos]</hint>
      </input>
      <input ref="/C1.26/planes/minutos">
        <label>Minutos:</label>
        <hint>Minutos</hint>
      </input>
      <input ref="/C1.26/planes/precio">
        <label>Precio:</label>
        <hint>Precio [en pesos]</hint>
      </input>
      <input appearance="multiline" ref="/C1.26/planes/observaciones">
        <label>Observaciones:</label>
        <hint>Observaciones</hint>
      </input>
    </group>
  </h:body>
</h:html>
