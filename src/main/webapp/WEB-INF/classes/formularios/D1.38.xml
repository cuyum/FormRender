<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario D1.38 - Gastos en Personal</h:title>
    <model>
      <instance>
        <D1.38 id="D1.38">
          <meses jr:template="">
            <mes>
              <gastos/>
              <cargas/>
              <terceros/>
              <otros/>
              <total/>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </D1.38>
      </instance>
      <bind constraint="mask=999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.38/meses/mes/gastos" required="true()" type="int"/>
      <bind constraint="mask=999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.38/meses/mes/cargas" required="true()" type="int"/>
      <bind constraint="mask=999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.38/meses/mes/terceros" required="true()" type="int"/>
      <bind constraint="mask=999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.38/meses/mes/otros" required="true()" type="int"/>
      <bind constraint="mask=999.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.38/meses/mes/total" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/D1.38/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/D1.38/meses">
      <label></label>
      <repeat nodeset="/D1.38/meses">
        <group appearance="col3 well-white variable" ref="/D1.38/meses/mes">
          <label>{title}</label>
          <input ref="/D1.38/meses/mes/gastos">
            <label>Gastos en Personal</label>
            <hint>Gastos en Personal [en miles de pesos]</hint>
          </input>
          <input ref="/D1.38/meses/mes/cargas">
            <label>CS y Otros</label>
            <hint>Cargas Sociales y Otros [en miles de pesos]</hint>
          </input>
          <input ref="/D1.38/meses/mes/terceros">
            <label>Materiales y trabajo de terceros</label>
            <hint>Terceros [en miles de pesos]</hint>
          </input>
          <input ref="/D1.38/meses/mes/otros">
            <label>Otros</label>
            <hint>Otros [en miles de pesos]</hint>
          </input>
          <input ref="/D1.38/meses/mes/total">
            <label>Total</label>
            <hint>Total [en miles de pesos]</hint>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
