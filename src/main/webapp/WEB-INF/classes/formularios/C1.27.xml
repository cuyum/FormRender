<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.27 - Tarifas / planes lineas restringidas</h:title>
    <model>
      <instance>
        <C1.27 id="C1.27">
          <planes>
            <my_string/>
            <periodo/>
            <segmento_mercado/>
            <abono_mensual/>
            <minutos/>
            <precio/>
            <observacion/>
          </planes>
          <meta>
            <instanceID/>
          </meta>
        </C1.27>
      </instance>
      <bind nodeset="/C1.27/planes/my_string" required="true()" type="string"/>
      <bind nodeset="/C1.27/planes/periodo" required="true()" type="select1"/>
      <bind nodeset="/C1.27/planes/segmento_mercado" required="true()" type="select1"/>
      <bind constraint="mask=9.999,99" jr:constraintMsg="Datos no válidos" nodeset="/C1.27/planes/abono_mensual" required="true()" type="string"/>
      <bind constraint="mask=999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.27/planes/minutos" required="true()" type="string"/>
      <bind constraint="mask=9.999,99" jr:constraintMsg="Datos no válidos" nodeset="/C1.27/planes/precio" required="true()" type="string"/>
      <bind nodeset="/C1.27/planes/observacion" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.27/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.27/planes">
      <label>Planes</label>
      <input ref="/C1.27/planes/my_string">
        <label>Plan</label>
        <hint>Plan</hint>
      </input>
      <select1 appearance="minimal" ref="/C1.27/planes/periodo">
        <label>Aplicación</label>
        <hint>Aplicación</hint>
        <item>
          <label>Seleccione opcion</label>
          <value>0</value>
        </item>
        <item>
          <label>Masiva</label>
          <value>1</value>
        </item>
        <item>
          <label>Por Adhesión</label>
          <value>2</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.27/planes/segmento_mercado">
        <label>Segmento</label>
        <hint>Segmento</hint>
        <item>
          <label>Seleccione opcion</label>
          <value>0</value>
        </item>
        <item>
          <label>Segmento 1</label>
          <value>1</value>
        </item>
        <item>
          <label>Segmento 2</label>
          <value>2</value>
        </item>
        <item>
          <label>Segmento 3</label>
          <value>3</value>
        </item>
      </select1>
      <input ref="/C1.27/planes/abono_mensual">
        <label>Abono</label>
        <hint>Abono [en pesos]</hint>
      </input>
      <input ref="/C1.27/planes/minutos">
        <label>Minutos</label>
        <hint>Minutos</hint>
      </input>
      <input ref="/C1.27/planes/precio">
        <label>Precio</label>
        <hint>Precio [en pesos]</hint>
      </input>
      <input appearance="multiline" ref="/C1.27/planes/observacion">
        <label>Observaciones</label>
        <hint>Obs.</hint>
      </input>
    </group>
  </h:body>
</h:html>
