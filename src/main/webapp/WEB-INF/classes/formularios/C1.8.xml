<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.8 - Clientes operativos (abonos)</h:title>
    <model>
      <instance>
        <C1.8 id="C1.8">
          <mes>
            <provincia/>
            <partido/>
            <localidad/>
            <areas_local/>
            <abono_1/>
            <abono_2/>
            <abono_3/>
            <suscrip_serv_adic/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.8>
      </instance>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/provincias" nodeset="/C1.8/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/partidos and depends=/C1.8/mes/provincia" nodeset="/C1.8/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/localidades and depends=/C1.8/mes/partido" nodeset="/C1.8/mes/localidad" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/areas and depends=/C1.8/mes/localidad" nodeset="/C1.8/mes/areas_local" required="true()" type="select1"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.8/mes/abono_1" required="true()" type="string"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.8/mes/abono_2" required="true()" type="string"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.8/mes/abono_3" required="true()" type="string"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.8/mes/suscrip_serv_adic" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.8/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.8/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.8/mes/provincia">
        <label>Provincia</label>
        <hint>Provincia</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/partido">
        <label>Partido / Departamento</label>
        <hint>Partido/Departamento</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/localidad">
        <label>Localidad</label>
        <hint>Localidad</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/areas_local">
        <label>Área Local</label>
        <hint>Área Local</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <input ref="/C1.8/mes/abono_1">
        <label>Abono Local</label>
        <hint>Abono Local</hint>
      </input>
      <input ref="/C1.8/mes/abono_2">
        <label>Abono LDN / LDI</label>
        <hint>Abono LDN / LDI</hint>
      </input>
      <input ref="/C1.8/mes/abono_3">
        <label>Abono LDI</label>
        <hint>Abono LDI</hint>
      </input>
      <input ref="/C1.8/mes/suscrip_serv_adic">
        <label>Suscripción Servicios Adicionales</label>
        <hint>Suscrip. Serv. Adic.</hint>
      </input>
    </group>
  </h:body>
</h:html>
