<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.8 - Clientes operativos (abonos)</h:title>
    <model>
      <instance>
        <C1.8 id="C1.8">
          <mes>
            <provincia4/>
            <partido4/>
            <localidad4/>
            <areas_local4/>
            <abono_1/>
            <abono_2/>
            <abono_3/>
            <suscrip_serv_adic/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.8>
      </instance>
      <bind constraint="url=/areas/provincias" jr:constraintMsg="true()" nodeset="/C1.8/mes/provincia4" required="true()" type="select1"/>
      <bind constraint="url=/areas/partidos and depends=/C1.8/mes/provincia" jr:constraintMsg="true()" nodeset="/C1.8/mes/partido4" required="true()" type="select1"/>
      <bind constraint="url=/areas/localidades and depends=/C1.8/mes/partido" jr:constraintMsg="true()" nodeset="/C1.8/mes/localidad4" required="true()" type="select1"/>
      <bind constraint="url=/areas/areas and depends=/C1.8/mes/localidad" nodeset="/C1.8/mes/areas_local4" required="true()" type="select1"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.8/mes/abono_1" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.8/mes/abono_2" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.8/mes/abono_3" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.8/mes/suscrip_serv_adic" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.8/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.8/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.8/mes/provincia4">
        <label>Provincia</label>
        <hint>Seleccione Provincia</hint>
        <item>
          <label></label>
          <value>id_provincia</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/partido4">
        <label>Partido / Departamento</label>
        <hint>Seleccione Partido</hint>
        <item>
          <label></label>
          <value>id_dpto_partido</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/localidad4">
        <label>Localidad</label>
        <hint>Seleccione Localidad</hint>
        <item>
          <label></label>
          <value>id_localidad</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.8/mes/areas_local4">
        <label>Área Local</label>
        <hint>Seleccione Área Local</hint>
        <item>
          <label></label>
          <value>id_area_local</value>
        </item>
      </select1>
      <input ref="/C1.8/mes/abono_1">
        <label>Abono Local</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.8/mes/abono_2">
        <label>Abono LDN / LDI</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.8/mes/abono_3">
        <label>Abono LDI</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.8/mes/suscrip_serv_adic">
        <label>Suscripción Servicios Adicionales</label>
        <hint>Ingrese número entero</hint>
      </input>
    </group>
  </h:body>
</h:html>
