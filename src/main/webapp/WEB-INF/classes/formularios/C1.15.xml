<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>C1.15 - Tráfico hacia móviles (llamadas)</h:title>
    <model>
      <instance>
        <C1.15 id="C1.15">
          <mes>
            <provincia/>
            <partido/>
            <localidad/>
            <areas_local/>
            <l_l>
              <l_saliente/>
              <l_operador/>
            </l_l>
            <l_ldn>
              <ldn_saliente/>
              <ldn_operador/>
            </l_ldn>
            <l_ldi>
              <ldi_saliente/>
              <ldi_operador/>
            </l_ldi>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.15>
      </instance>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/provincias" nodeset="/C1.15/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/partidos and depends=/C1.15/mes/provincia" nodeset="/C1.15/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/localidades and depends=/C1.15/mes/partido" nodeset="/C1.15/mes/localidad" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/areas and depends=/C1.15/mes/localidad" nodeset="/C1.15/mes/areas_local" required="true()" type="select1"/>
      <bind constraint="mask=999.999.999.999,9" jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_l/l_saliente" required="true()" type="string"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_l/l_operador" required="true()" type="string"/>
      <bind constraint="mask=999.999.999.999,9" jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_ldn/ldn_saliente" required="true()" type="string"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_ldn/ldn_operador" required="true()" type="string"/>
      <bind constraint="mask=999.999.999.999,9" jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_ldi/ldi_saliente" required="true()" type="string"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/C1.15/mes/l_ldi/ldi_operador" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.15/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.15/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.15/mes/provincia">
        <label>Provincia</label>
        <hint>Provincia</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.15/mes/partido">
        <label>Partido / Departamento</label>
        <hint>Partido/Departamento</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.15/mes/localidad">
        <label>Localidad</label>
        <hint>Localidad</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.15/mes/areas_local">
        <label>Área Local</label>
        <hint>Área Local</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <group appearance="col2 well-white" ref="/C1.15/mes/l_l">
        <label>L-L</label>
        <input ref="/C1.15/mes/l_l/l_saliente">
          <label>Saliente</label>
          <hint>Saliente [en miles]</hint>
        </input>
        <input ref="/C1.15/mes/l_l/l_operador">
          <label>Operador</label>
          <hint>Operador</hint>
        </input>
      </group>
      <group appearance="col2 well-white" ref="/C1.15/mes/l_ldn">
        <label>L-LDN</label>
        <input ref="/C1.15/mes/l_ldn/ldn_saliente">
          <label>Saliente</label>
          <hint>Saliente [en miles]</hint>
        </input>
        <input ref="/C1.15/mes/l_ldn/ldn_operador">
          <label>Operador</label>
          <hint>Operador</hint>
        </input>
      </group>
      <group appearance="col2 well-white" ref="/C1.15/mes/l_ldi">
        <label>L-LDI</label>
        <input ref="/C1.15/mes/l_ldi/ldi_saliente">
          <label>Saliente</label>
          <hint>Saliente [en miles]</hint>
        </input>
        <input ref="/C1.15/mes/l_ldi/ldi_operador">
          <label>Operador</label>
          <hint>Operador</hint>
        </input>
      </group>
    </group>
  </h:body>
</h:html>
