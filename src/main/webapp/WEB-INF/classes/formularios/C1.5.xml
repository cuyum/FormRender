<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.5 - Accesos Operativos</h:title>
    <model>
      <instance>
        <C1.5 id="C1.5">
          <meses jr:template="">
            <mes>
              <provincia/>
              <partido/>
              <localidad/>
              <localidad_otro/>
              <area/>
              <area_otro/>
              <accesos/>
              <trama_e1/>
              <prepago/>
              <pospago/>
              <mixto/>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </C1.5>
      </instance>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/provincias" nodeset="/C1.5/meses/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/partidos and depends=/C1.5/meses/mes/provincia" nodeset="/C1.5/meses/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/localidades and depends=/C1.5/meses/mes/partido" nodeset="/C1.5/meses/mes/localidad" required="true()" type="select1"/>
      <bind nodeset="/C1.5/meses/mes/localidad_otro" relevant=" /C1.5/meses/mes/localidad =9999" required="true()" type="string"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/areas and depends=/C1.5/meses/mes/localidad" nodeset="/C1.5/meses/mes/area" required="true()" type="select1"/>
      <bind nodeset="/C1.5/meses/mes/area_otro" relevant=" /C1.5/meses/mes/area =9999" required="true()" type="string"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/meses/mes/accesos" required="true()" type="int"/>
      <bind constraint="mask=9.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/meses/mes/trama_e1" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/meses/mes/prepago" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/meses/mes/pospago" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/meses/mes/mixto" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.5/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/C1.5/meses">
      <label></label>
      <repeat appearance="grilla" nodeset="/C1.5/meses">
        <group appearance="col4 well-white variable" ref="/C1.5/meses/mes">
          <label>{title}</label>
          <select1 appearance="minimal" ref="/C1.5/meses/mes/provincia">
            <label>Provincia</label>
            <hint>Provincia</hint>
            <item>
              <label>Seleccione una opcion</label>
              <value>0</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/C1.5/meses/mes/partido">
            <label>Partido / Departamento</label>
            <hint>Partido/Departamento</hint>
            <item>
              <label>Seleccione una opcion</label>
              <value>0</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/C1.5/meses/mes/localidad">
            <label>Localidad</label>
            <hint>Localidad</hint>
            <item>
              <label>Seleccione una opcion</label>
              <value>0</value>
            </item>
          </select1>
          <input ref="/C1.5/meses/mes/localidad_otro">
            <label>Especifique</label>
          </input>
          <select1 appearance="minimal" ref="/C1.5/meses/mes/area">
            <label>Área Local</label>
            <hint>Área Local</hint>
            <item>
              <label>Seleccione una opcion</label>
              <value>0</value>
            </item>
          </select1>
          <input ref="/C1.5/meses/mes/area_otro">
            <label>Especifique</label>
          </input>
          <input ref="/C1.5/meses/mes/accesos">
            <label>Accesos</label>
            <hint>Accesos</hint>
          </input>
          <input ref="/C1.5/meses/mes/trama_e1">
            <label>Tramas E1</label>
            <hint>Tramas E1</hint>
          </input>
          <input ref="/C1.5/meses/mes/prepago">
            <label>Prepago</label>
            <hint>Prepago</hint>
          </input>
          <input ref="/C1.5/meses/mes/pospago">
            <label>Pospago</label>
            <hint>Pospago</hint>
          </input>
          <input ref="/C1.5/meses/mes/mixto">
            <label>Mixto</label>
            <hint>Mixto</hint>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
