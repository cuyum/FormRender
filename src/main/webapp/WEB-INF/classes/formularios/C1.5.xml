<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.5 - Accesos Operativos</h:title>
    <model>
      <instance>
        <C1.5 id="C1.5">
          <mes>
            <provincia/>
            <partido/>
            <localidad/>
            <area/>
            <accesos/>
            <trama_e1/>
            <prepago/>
            <pospago/>
            <mixto/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.5>
      </instance>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/provincias" nodeset="/C1.5/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/partidos and depends=/C1.5/mes/provincia" nodeset="/C1.5/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/localidades and depends=/C1.5/mes/partido" nodeset="/C1.5/mes/localidad" required="true()" type="select1"/>
      <bind constraint="url=http://54.232.16.128:8080/localizacion/rest/localizaciones/areas and depends=/C1.5/mes/localidad" nodeset="/C1.5/mes/area" required="true()" type="select1"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/mes/accesos" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/mes/trama_e1" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/mes/prepago" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/mes/pospago" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/C1.5/mes/mixto" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.5/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.5/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.5/mes/provincia">
        <label>Provincia</label>
        <hint>Provincia</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/partido">
        <label>Partido / Departamento</label>
        <hint>Partido/Departamento</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/localidad">
        <label>Localidad</label>
        <hint>Localidad</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/area">
        <label>Área Local</label>
        <hint>Área Local</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <input ref="/C1.5/mes/accesos">
        <label>Accesos</label>
        <hint>Accesos</hint>
      </input>
      <input ref="/C1.5/mes/trama_e1">
        <label>Tramas E1</label>
        <hint>Tramas E1</hint>
      </input>
      <input ref="/C1.5/mes/prepago">
        <label>Prepago</label>
        <hint>Prepago</hint>
      </input>
      <input ref="/C1.5/mes/pospago">
        <label>Pospago</label>
        <hint>Pospago</hint>
      </input>
      <input ref="/C1.5/mes/mixto">
        <label>Mixto</label>
        <hint>Mixto</hint>
      </input>
    </group>
  </h:body>
</h:html>
