<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.5 - Accesos Operativos</h:title>
    <model>
      <instance>
        <C1.5 id="C1.5">
          <mes>
            <provincia/>
            <partido/>
            <localidad/>
            <areas_local/>
            <accesos/>
            <trama_e1/>
            <prepago/>
            <pospago/>
            <mixto/>
          </mes>
          <meta>
            <instanceID/>
          </meta>
        </C1.5>
      </instance>
      <bind constraint="url=/areas/provincias" nodeset="/C1.5/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=/areas/partidos and depends=/C1.5/mes/provincia" nodeset="/C1.5/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=/areas/localidades and depends=/C1.5/mes/partido" nodeset="/C1.5/mes/localidad" required="true()" type="select1"/>
      <bind constraint="url=/areas/areas and depends=/C1.5/mes/localidad" nodeset="/C1.5/mes/areas_local" required="true()" type="select1"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.5/mes/accesos" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.5/mes/trama_e1" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.5/mes/prepago" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.5/mes/pospago" required="true()" type="int"/>
      <bind constraint=".&lt;1000000 and .&gt;0" jr:constraintMsg="Debe ingresar un número entero hasta 6 dígitos y mayor a 0" nodeset="/C1.5/mes/mixto" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.5/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 well-white" ref="/C1.5/mes">
      <label>Enero</label>
      <select1 appearance="minimal" ref="/C1.5/mes/provincia">
        <label>Provincia</label>
        <hint>Seleccione Provincia</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/partido">
        <label>Partido / Departamento</label>
        <hint>Seleccione partido</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/localidad">
        <label>Localidad</label>
        <hint>Seleccione Localidad</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.5/mes/areas_local">
        <label>Área Local</label>
        <hint>Seleccione Área Local</hint>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <input ref="/C1.5/mes/accesos">
        <label>Accesos</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.5/mes/trama_e1">
        <label>Tramas E1</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.5/mes/prepago">
        <label>Prepago</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.5/mes/pospago">
        <label>Pospago</label>
        <hint>Ingrese número entero</hint>
      </input>
      <input ref="/C1.5/mes/mixto">
        <label>Mixto</label>
        <hint>Ingrese número entero</hint>
      </input>
    </group>
  </h:body>
</h:html>
