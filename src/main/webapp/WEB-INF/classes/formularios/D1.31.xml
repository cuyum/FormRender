<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario D1.31 - Tarifas / Planes internet móvil</h:title>
    <model>
      <instance>
        <D1.31 id="D1.31">
          <caracteristicas>
            <plan/>
            <modalid/>
          </caracteristicas>
          <abonoDatos>
            <abonoRecarga>
              <abono/>
            </abonoRecarga>
            <datos>
              <datosIncuidos/>
            </datos>
          </abonoDatos>
          <precios>
            <kb/>
            <kbExedente/>
            <sms/>
            <minuto/>
          </precios>
          <impOtros>
            <impuestos>
              <impuestosPorc/>
            </impuestos>
            <observaciones>
              <obs/>
            </observaciones>
          </impOtros>
          <meta>
            <instanceID/>
          </meta>
        </D1.31>
      </instance>
      <bind nodeset="/D1.31/caracteristicas/plan" required="true()" type="string"/>
      <bind nodeset="/D1.31/caracteristicas/modalid" required="true()" type="select1"/>
      <bind nodeset="/D1.31/abonoDatos/abonoRecarga/abono" required="true()" type="string"/>
      <bind nodeset="/D1.31/abonoDatos/datos/datosIncuidos" required="true()" type="string"/>
      <bind nodeset="/D1.31/precios/kb" required="true()" type="string"/>
      <bind nodeset="/D1.31/precios/kbExedente" required="true()" type="string"/>
      <bind nodeset="/D1.31/precios/sms" required="true()" type="string"/>
      <bind nodeset="/D1.31/precios/minuto" required="true()" type="string"/>
      <bind nodeset="/D1.31/impOtros/impuestos/impuestosPorc" required="true()" type="string"/>
      <bind nodeset="/D1.31/impOtros/observaciones/obs" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/D1.31/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col1 well-white" ref="/D1.31/caracteristicas">
      <label>Características Generales</label>
      <input ref="/D1.31/caracteristicas/plan">
        <label>Nombre del Plan</label>
        <hint>Nombre del Plan</hint>
      </input>
      <select1 appearance="minimal" ref="/D1.31/caracteristicas/modalid">
        <label>Modalidad</label>
        <hint>Modalidad</hint>
        <item>
          <label>Seleccione opción</label>
          <value>-1</value>
        </item>
        <item>
          <label>Opción 1</label>
          <value>opcion1</value>
        </item>
        <item>
          <label>Opción 2</label>
          <value>opcion2</value>
        </item>
        <item>
          <label>Opción 3</label>
          <value>opcion3</value>
        </item>
      </select1>
    </group>
    <group appearance="col1 well-white" ref="/D1.31/abonoDatos">
      <group appearance="col2 well-white" ref="/D1.31/abonoDatos/abonoRecarga">
        <label>Abono Recarga</label>
        <input ref="/D1.31/abonoDatos/abonoRecarga/abono">
          <label>Abono</label>
          <hint>Abono</hint>
        </input>
      </group>
      <group appearance="col2 well-white" ref="/D1.31/abonoDatos/datos">
        <label>Datos</label>
        <input ref="/D1.31/abonoDatos/datos/datosIncuidos">
          <label>Datos Incluidos</label>
          <hint>Datos Incluidos</hint>
        </input>
      </group>
    </group>
    <group appearance="col4 well-white" ref="/D1.31/precios">
      <label>Precios</label>
      <input ref="/D1.31/precios/kb">
        <label>KB</label>
        <hint>KB</hint>
      </input>
      <input ref="/D1.31/precios/kbExedente">
        <label>KB Exedente</label>
        <hint>KB Exedente</hint>
      </input>
      <input ref="/D1.31/precios/sms">
        <label>SMS</label>
        <hint>SMS</hint>
      </input>
      <input ref="/D1.31/precios/minuto">
        <label>Minuto</label>
        <hint>Minuto</hint>
      </input>
    </group>
    <group appearance="col1 well-white" ref="/D1.31/impOtros">
      <group appearance="col2 well-white" ref="/D1.31/impOtros/impuestos">
        <label>Impuestos</label>
        <input ref="/D1.31/impOtros/impuestos/impuestosPorc">
          <label>% impuestos</label>
          <hint>% impuestos</hint>
        </input>
      </group>
      <group appearance="col2 well-white" ref="/D1.31/impOtros/observaciones">
        <label>Observaciones</label>
        <input appearance="multiline" ref="/D1.31/impOtros/observaciones/obs">
          <label>Observaciones</label>
          <hint>Observaciones</hint>
        </input>
      </group>
    </group>
  </h:body>
</h:html>
