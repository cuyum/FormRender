<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario D1.19 - Mensajes</h:title>
    <model>
      <instance>
        <D1.19 id="D1.19">
          <meses jr:template="">
            <mes>
              <provincia/>
              <partido/>
              <localidad/>
              <localidad_otro/>
              <sms>
                <smsOn/>
                <smsOf/>
              </sms>
              <mms>
                <mmsOn/>
                <mmsOf/>
              </mms>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </D1.19>
      </instance>
      <bind constraint="url=/localizacion/rest/localizaciones/provincias" nodeset="/D1.19/meses/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/partidos and depends=/D1.19/meses/mes/provincia" nodeset="/D1.19/meses/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/localidades and depends=/D1.19/meses/mes/partido" nodeset="/D1.19/meses/mes/localidad" required="true()" type="select1"/>
      <bind nodeset="/D1.19/meses/mes/localidad_otro" relevant=" /D1.19/meses/mes/localidad =9999" required="true()" type="string"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/D1.19/meses/mes/sms/smsOn" required="true()" type="int"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/D1.19/meses/mes/sms/smsOf" required="true()" type="int"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/D1.19/meses/mes/mms/mmsOn" required="true()" type="int"/>
      <bind jr:constraintMsg="Datos no válidos" nodeset="/D1.19/meses/mes/mms/mmsOf" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/D1.19/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/D1.19/meses">
      <label></label>
      <repeat appearance="grilla" nodeset="/D1.19/meses">
        <group appearance="col3 well-white variable" ref="/D1.19/meses/mes">
          <label>{title}</label>
          <select1 appearance="minimal" ref="/D1.19/meses/mes/provincia">
            <label>Provincia</label>
            <hint>Provincia</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/D1.19/meses/mes/partido">
            <label>Partido / Departamento</label>
            <hint>Partido/Departamento</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/D1.19/meses/mes/localidad">
            <label>Localidad</label>
            <hint>Localidad</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <input ref="/D1.19/meses/mes/localidad_otro">
            <label>Localidad Otros</label>
            <hint>Localidad Otros</hint>
          </input>
          <group appearance="col2 well-white" ref="/D1.19/meses/mes/sms">
            <label>SMS Enviados</label>
            <input ref="/D1.19/meses/mes/sms/smsOn">
              <label>ON NET</label>
              <hint>ON NET</hint>
            </input>
            <input ref="/D1.19/meses/mes/sms/smsOf">
              <label>OF NET</label>
              <hint>OF NET</hint>
            </input>
          </group>
          <group appearance="col2 well-white" ref="/D1.19/meses/mes/mms">
            <label>MMS Enviados</label>
            <input ref="/D1.19/meses/mes/mms/mmsOn">
              <label>ON NET</label>
              <hint>ON NET</hint>
            </input>
            <input ref="/D1.19/meses/mes/mms/mmsOf">
              <label>OF NET</label>
              <hint>OF NET</hint>
            </input>
          </group>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
