<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.1 - Áreas de prestación de servicios</h:title>
    <model>
      <submission action="/api/deposition/draft" method="form-data-post"/>
      <instance>
        <C1.1 id="C1.1">
          <areasprest jr:template="">
            <areas>
              <provincia/>
              <partido/>
              <localidad/>
              <localidad_otro/>
              <area/>
              <area_otro/>
            </areas>
          </areasprest>
          <meta>
            <instanceID/>
          </meta>
        </C1.1>
      </instance>
      <bind constraint="url=/localizacion/rest/localizaciones/provincias" nodeset="/C1.1/areasprest/areas/provincia" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/partidos and depends=/C1.1/areasprest/areas/provincia" nodeset="/C1.1/areasprest/areas/partido" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/localidades and depends=/C1.1/areasprest/areas/partido" nodeset="/C1.1/areasprest/areas/localidad" required="true()" type="select1"/>
      <bind nodeset="/C1.1/areasprest/areas/localidad_otro" relevant=" /C1.1/areasprest/areas/localidad =9999" required="true()" type="string"/>
      <bind constraint="url=/localizacion/rest/localizaciones/areas and depends=/C1.1/areasprest/areas/localidad" nodeset="/C1.1/areasprest/areas/area" required="true()" type="select1"/>
      <bind nodeset="/C1.1/areasprest/areas/area_otro" relevant=" /C1.1/areasprest/areas/area =9999" required="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.1/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/C1.1/areasprest">
      <label></label>
      <repeat appearance="grilla" nodeset="/C1.1/areasprest">
        <group appearance="col4 well-white" ref="/C1.1/areasprest/areas">
          <label>Áreas de prestación</label>
          <select1 appearance="minimal" ref="/C1.1/areasprest/areas/provincia">
            <label>Provincia</label>
            <hint>Provincia</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/C1.1/areasprest/areas/partido">
            <label>Partido / Departamento</label>
            <hint>Partido/Departamento</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/C1.1/areasprest/areas/localidad">
            <label>Localidad</label>
            <hint>Localidad</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <input ref="/C1.1/areasprest/areas/localidad_otro">
            <label>Localidad Otros</label>
          </input>
          <select1 appearance="minimal" ref="/C1.1/areasprest/areas/area">
            <label>Área Local</label>
            <hint>Área Local</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <input ref="/C1.1/areasprest/areas/area_otro">
            <label>Área Otros</label>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
