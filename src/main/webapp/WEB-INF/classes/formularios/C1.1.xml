<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario C1.1 - Áreas de prestación se servicios</h:title>
    <model>
      <instance>
        <C1.1 id="C1.1">
          <areas>
            <provincia/>
            <partido/>
            <localidad/>
            <area/>
          </areas>
          <meta>
            <instanceID/>
          </meta>
        </C1.1>
      </instance>
      <bind constraint="url=/areas/provincias" nodeset="/C1.1/areas/provincia" required="true()" type="select1"/>
      <bind constraint="url=/areas/partidos and depends=/C1.1/areas/provincia" nodeset="/C1.1/areas/partido" required="true()" type="select1"/>
      <bind constraint="url=/areas/localidades and depends=/C1.1/areas/partido" nodeset="/C1.1/areas/localidad" required="true()" type="select1"/>
      <bind constraint="url=/areas/areas and depends=/C1.1/areas/localidad" nodeset="/C1.1/areas/area" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/C1.1/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="col4 whell-white" ref="/C1.1/areas">
      <label>Áreas de prestación</label>
      <select1 appearance="minimal" ref="/C1.1/areas/provincia">
        <label>Provincia</label>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.1/areas/partido">
        <label>Partido / Departamento</label>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.1/areas/localidad">
        <label>Localidad</label>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
      <select1 appearance="minimal" ref="/C1.1/areas/area">
        <label>Area Local</label>
        <item>
          <label>Seleccione una opcion</label>
          <value>0</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>
