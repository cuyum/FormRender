<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Formulario D1.21 - Calidad de servicio / Facturación</h:title>
    <model>
      <instance>
        <D1.21 id="D1.21">
          <meses jr:template="">
            <mes>
              <provincia/>
              <partido/>
              <localidad/>
              <localidad_otro/>
              <contratos_vigentes/>
              <facturacion_papel/>
              <facturacion_web/>
            </mes>
          </meses>
          <meta>
            <instanceID/>
          </meta>
        </D1.21>
      </instance>
      <bind constraint="url=/localizacion/rest/localizaciones/provincias" nodeset="/D1.21/meses/mes/provincia" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/partidos and depends=/D1.21/meses/mes/provincia" nodeset="/D1.21/meses/mes/partido" required="true()" type="select1"/>
      <bind constraint="url=/localizacion/rest/localizaciones/localidades and depends=/D1.21/meses/mes/partido" nodeset="/D1.21/meses/mes/localidad" required="true()" type="select1"/>
      <bind nodeset="/D1.21/meses/mes/localidad_otro" relevant=" /D1.21/meses/mes/localidad =9999" required="true()" type="string"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.21/meses/mes/contratos_vigentes" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.21/meses/mes/facturacion_papel" required="true()" type="int"/>
      <bind constraint="mask=99.999.999" jr:constraintMsg="Datos no válidos" nodeset="/D1.21/meses/mes/facturacion_web" required="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/D1.21/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/D1.21/meses">
      <label></label>
      <repeat appearance="grilla" nodeset="/D1.21/meses">
        <group appearance="col4 well-white variable" ref="/D1.21/meses/mes">
          <label>{title}</label>
          <select1 appearance="minimal" ref="/D1.21/meses/mes/provincia">
            <label>Provincia</label>
            <hint>Provincia</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/D1.21/meses/mes/partido">
            <label>Partido / Departamento</label>
            <hint>Partido/Departamento</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <select1 appearance="minimal" ref="/D1.21/meses/mes/localidad">
            <label>Localidad</label>
            <hint>Localidad</hint>
            <item>
              <label>Seleccione una opción</label>
              <value>-1</value>
            </item>
          </select1>
          <input ref="/D1.21/meses/mes/localidad_otro">
            <label>Localidad Otros</label>
            <hint>Localidad Otros</hint>
          </input>
          <input ref="/D1.21/meses/mes/contratos_vigentes">
            <label>Contratos Vigentes</label>
            <hint>Contratos Vigentes</hint>
          </input>
          <input ref="/D1.21/meses/mes/facturacion_papel">
            <label>Facturación Papel</label>
            <hint>Facturación Papel</hint>
          </input>
          <input ref="/D1.21/meses/mes/facturacion_web">
            <label>Facturación Web</label>
            <hint>Facturación Web</hint>
          </input>
        </group>
      </repeat>
    </group>
  </h:body>
</h:html>
